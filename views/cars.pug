extends layout

block content
  h1= title
  - var results = car_results
  div.container-fluid 
    div.row 
        each item, index in results
            div.col-sm-2(onclick=`buy(${index})`) car Name: #{item["car_Name"]} <br> car color: #{item["car_color"]} <br> car Size: #{item["car_Size"]} <br> car Rating: #{item["car_Rating"]} <br> car Category: #{item["car_Category"]}

  script.
    function buy(index) {
      alert("You purchased item " + index)
    }